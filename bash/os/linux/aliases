#vim: set filetype=sh
#echo "Custom aliases"

#
# ls aliases enable color support of ls and also add handy aliases
#
alias ls='ls -G'
alias ll="ls -lh"
alias la="ls -lah"
alias l="ls"


#
#  JRuby aliases
#
alias jrs="jruby -S"
alias jr=jruby
alias jk="jruby -S rake"

alias tar=gnutar

#
#  GIT aliases
#
alias gpom="git push origin master:refs/heads/master"
alias gs="git status"
alias gadd="git add"
alias gd="git diff"
alias gci="git commit -v"
alias gca="git commit -av"
alias gcl="git log --grap"
alias gl="git lola"

alias ta="tig --all"


