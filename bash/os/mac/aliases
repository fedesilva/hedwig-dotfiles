#vim: set filetype=sh
#echo "Custom aliases"

#
# ls aliases enable color support of ls and also add handy aliases
#
alias ls='ls -G'
alias ll="ls -lh"
alias la="ls -lah"
alias l="ls"

if $IS_MAS = 1
then
#
#  Homebrew
#

alias br=brew
alias brs="br search"
alias bri="br info"
alias brh="br home"

#
#  Make MacVim the default vim
#
alias vi='/Applications/MacVim.app/Contents/MacOS/Vim'
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'

#
# Terminitor
#
alias ti=terminitor
alias tio="terminitor open"
alias tis="terminitor start"

fi

#
#  JRuby aliases
#
alias jrs="jruby -S"
alias jr=jruby
alias jk="jruby -S rake"

alias tar=gnutar

#
#  GIT aliases
#
alias gpom="git push origin master:refs/heads/master"
alias gs="git status"
alias gadd="git add"
alias gd="git diff"
alias gci="git commit -v"
alias gca="git commit -av"
alias gcl="git log --grap"
alias gl="git lola"

alias ta="tig --all"


