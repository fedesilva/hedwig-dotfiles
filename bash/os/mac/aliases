#vim: set filetype=sh
#echo "Custom aliases"

#
# ls aliases enable color support of ls and also add handy aliases
#
alias ls='ls -G'
alias ll="ls -lh"
alias la="ls -lah"
alias l="ls"


#  Homebrew
#

alias br=brew
alias brs="br search"
alias bri="br info"
alias brh="br home"

#
#  Make MacVim the default vim
#
#alias vi='/Applications/MacVim.app/Contents/MacOS/Vim'
#alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'

#
# Terminitor
#
alias ti=terminitor
alias tio="terminitor open"
alias tis="terminitor start"


#
#  JRuby aliases
#
alias jrs="jruby -S"
alias jr=jruby
alias jk="jruby -S rake"


#
#  GIT aliases
#
alias gpom="git push origin master:refs/heads/master"
alias gs="git status"
alias gadd="git add"
alias gd="git diff"
alias gci="git commit -v"
alias gca="git commit -av"
alias gcl="git log --graph"
alias gl="git lol"
alias gla="git lola"
alias gms="git merge --squash"

alias gw="git whatchanged"
alias gwp="git whatchanged -p"


alias ta="tig --all"

