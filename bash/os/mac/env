export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/$JAVA_VERSION/Home
export JAVA_PATH=$JAVA_HOME/bin

#
# Scala distro
#
export SCALA_HOME=$HOME/Workshop/Library/scala/dist/current
export SCALA_PATH=$SCALA_HOME/bin
export PATH=$PATH:$SCALA_PATH

#
# Clojure repl 
#
export PATH=$HOME/.cljr/bin:$PATH


#
#  Misc Development env vars
#
export JREBEL_OPTS="-noverify -javaagent:/Applications/ZeroTurnaround/JRebel/jrebel.jar"
export SBT_OPTS="$JREBEL_OPTS -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=256m -Dfile.encoding=UTF8"

export APPENGINE_SDK_HOME=$HOME/Library/homebrew/Cellar/app-engine-java-sdk/1.3.8/libexec/

export EDITOR=/Applications/MacVim.app/Contents/MacOS/Vim
export SVN_EDITOR=$EDITOR


#Home bin
export PATH=$HOME/bin:$PATH

#Python crap
export PATH=/usr/local/share/python:$PATH


# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).



#system's bash completion
if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi


#
#  HomeBrew
#
export PATH=`brew --prefix`/bin:`brew --prefix`/Cellar/python/2.7/bin:`brew --prefix`/sbin:$PATH

if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi


