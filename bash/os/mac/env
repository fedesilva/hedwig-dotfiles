#vim: set filetype=sh

#echo "Setting ENV"

#
#  Java
#
#export JAVA_HOME=$HOME/bin/soylatte16-i386-1.0
#export JAVA_VERSION=1.6
#export JAVA_VERSION=1.7
#export JAVA_VERSION=1.5

export JAVA_HOME=`/usr/libexec/java_home`
export JAVA_PATH=$JAVA_HOME/bin

#
# Scala distro
#
export SCALA_HOME=$HOME/Workshop/Library/scala/dist/current
export SCALA_PATH=$SCALA_HOME/bin
export PATH=$PATH:$SCALA_PATH

#
#  Misc Development env vars
#
export JREBEL_JAR=$HOME/Applications/ZeroTurnaround/JRebel/jrebel.jar
export JREBEL_OPTS="-noverify -javaagent:${JREBEL_JAR}"
export SBT_OPTS="$JREBEL_OPTS  -Xmx1536m -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=384m -Dfile.encoding=UTF8 "

export GAE_SDK_VERSION=1.7.2.1
export APPENGINE_SDK_HOME=/Applications/appengine/${GAE_SDK_VERSION}/

export EDITOR=/Applications/MacVim.app/Contents/MacOS/Vim
export SVN_EDITOR=$EDITOR


#Home bin
export PATH=$HOME/bin:$PATH


# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).

#system's bash completion
if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi


#
#  HomeBrew
#
export HOME_BREW_HOME=`brew --prefix`
export PATH=$HOME_BREW_HOME/bin:$HOME_BREW_HOME/Cellar/python/2.7/bin:$HOME/Library/homebrew/sbin:$PATH

if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi


[ ! -z "which grc" ] && source "`brew --prefix`/etc/grc.bashrc"

